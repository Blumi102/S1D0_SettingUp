{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],

    // "off" means 0 (turns the rule off completely)
    // "warn" means 1 (turns the rule on but won't make the linter fail)
    // "error" means 2 (turns the rule on and will make the linter fail)

    "rules": {
        "no-console": 0
    }
}
